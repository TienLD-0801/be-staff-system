{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": { "@/*": ["src/*"]}
  },
  "include": ["src/**/*", "src/**/**/*.json"],
  "exclude": ["node_modules/**/*"]
}
